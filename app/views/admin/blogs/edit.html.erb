<div class="jumbotron">
	<h1 align="center">Edit Your Blog</h1>
	<%= render 'shared/errors',obj: @blog %>
<div class="row">
  <div class="col-xs-12">
   <%= form_with(model: @blog,url: admin_blog_path,html:{class:"form-horizontal",role:"form"}, local: true) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :title%>
        </div>
        <div class="col-sm-8">     
         <%= form.text_field :title,placeholder:"Enter Title..",class:"form-control",datarole:"tagsinput" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :department%>
        </div>
        <div class="col-md-8">     
          <%= form.select(:department_id,User::LIST,{include_blank:'select..'},{class:"form-control"})%>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= form.label :image%>
        </div>
        <div class="col-md-8">     
          <%= form.file_field :blog_image ,class:"form-control"%>
        </div>
    </div>
    <div class="form-group">
       <div class="control-label col-sm-2">
          <%= form.label :description%>
        </div>
        <div class="col-sm-8">
      <%= form.text_area :description,rows: 10,placeholder:"Enter Description..",class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class:"btn btn-lg btn-success" %>
    </div>
    </div>
   
   <% end %>
   <div class="col-xs-4 col-xs-offset-4">
    [<%=link_to 'Return to a blog listing',admin_blogs_path%>] 
  </div>
 </div>
</div>
</div>

